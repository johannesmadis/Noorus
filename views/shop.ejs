<%- include('partials/head', {data: data}); -%>
<%- include('partials/navigation', {data: data}); -%>


<main class="shop">


  <section class="section">

    <div class="container">
      <h2 class="heading heading--secondary"><%= data.pageInfo.pageTitle %></h2>
      <% if (data.intros[8][data.language]) { %>
      <div class="content">
        <div>
          <%- data.intros[8][data.language] %>
        </div>
      </div>
      <% } %>
    </div>

    <% for (var i = 0; i < data.shopItems.length; i++) { %>
    <div class="shop__container" id="container<%= i + 1 %>">
      <div class="shop__img" style="background-image: url('<%= data.shopImages[i].url %>');">
      </div>
      <div class="shop__text-box">
        <div class="shop__description low-fixed-height textBox" id="textBox<%= i + 1 %>">
          <h3 class="heading heading--tertiary"><%= data.shopItems[i].heading[data.language] %></h3>
            <% if (data.shopItems[i].content[data.language]) { %>
            <div class="content">
              <div>
                <%- data.shopItems[i].content[data.language] %>
              </div>
            </div>
            <% } %>
        </div>
        <div class="shop__link-box">
          <a class="link delete linkBtn" href="#container<%= i + 1 %>" id="linkBtn<%= i + 1 %>"><%= data.pageInfo.miscellaneous[0] %></a>
        </div>
        <div class="shop__btn-box">
          <span class="shop__price heading heading--tertiary"><strong><%= data.shopItems[i].price %> â‚¬</strong></span>
          <a href="" class="btn btn--main orderBtn" id="orderBtn<%= i + 1 %>"><%= data.pageInfo.miscellaneous[1] %></a>
        </div>
      </div>
    </div>
    <% } %>

  </section>


</main>


<%- include('partials/footnav', {data: data}); -%>
<%- include('partials/footer'); -%>
