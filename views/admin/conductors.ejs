<%- include('../partials/head', {data: data}); -%>
<%- include('../partials/adminnav', {data: data}); -%>
<%- include('../partials/popup', {data: data}); -%>


<h1 class="admin-heading admin-heading--primary">Dirigendid</h1>

<form class="admin__form" action="/api/conductors/intro">
  <h3 class="admin-heading admin-heading--secondary">Sissejuhatav tekst</h3>
  <div class="admin__input-group">
    <h3 class="admin-heading admin-heading--tertiary">Sisu</h3>
    <div class="column-container">
      <div class="admin__input-item">
        <h3 class="admin-heading admin-heading--quarternary">EST</h3>
        <div class="admin__editor">
          <div class="editor" id="conductorsIntroEstEditor"><%- data.intros[1].est %></div>
        </div>
        <input class="admin__hidden-input" id="conductorsIntroEst" name="conductorsIntroEst" type="text">
      </div>
      <div class="admin__input-item">
        <h3 class="admin-heading admin-heading--quarternary">EN</h3>
        <div class="admin__editor">
          <div class="editor" id="conductorsIntroEnEditor"><%- data.intros[1].en %></div>
        </div>
        <input class="admin__hidden-input" id="conductorsIntroEn" name="conductorsIntroEn" type="text">
      </div>
    </div>
    <div class="column-container">
      <button class="btn btn--admin btn--admin--large" type="submit">Salvesta</button>
    </div>
  </div>

</form>

<% for (var i = 0; i < data.conductorsSections.length; i++) { %>

<form class="admin__form" action="/api/conductors/sections/<%= i + 1 %>">

  <div class="admin__input-group">
    <h3 class="admin-heading admin-heading--secondary">Dirigent <%= i + 1 %></h3>
    <div class="column-container">
      <div class="admin__input__item">
        <h3 class="admin-heading admin-heading--tertiary">Portree</h3>
        <input class="admin__hidden-input" id="conductorsImg<%= i + 1 %>" name="conductorsImg<%= i + 1 %>" type="file">
        <label class="btn btn--admin btn--admin--small" for="conductorsImg<%= i + 1 %>">Vali fail</label>
        <p class="admin__label" id="conductorsImg<%= i + 1 %>Label"><%= data.conductorsImages[i].filename %></p>
        <img class="admin__preview" id="conductorsImg<%= i + 1 %>Preview" src="<%= data.conductorsImages[i].url %>" alt="Dirigendi portree">
      </div>
    </div>
  </div>
  <hr>
  <div class="admin__input-group">
    <h3 class="admin-heading admin-heading--tertiary">Nimi</h3>
    <div class="column-container">
      <div class="admin__input-item">
        <h3 class="admin-heading admin-heading--quarternary">EST</h3>
        <input class="admin__input admin__input--bold" name="conductorsHeading<%= i + 1 %>Est" type="text" value="<%= data.conductorsSections[i].heading.est %>">
      </div>
      <div class="admin__input-item">
        <h3 class="admin-heading admin-heading--quarternary">EN</h3>
        <input class="admin__input admin__input--bold" name="conductorsHeading<%= i + 1 %>En" type="text" value="<%= data.conductorsSections[i].heading.en %>">
      </div>
    </div>
    <h3 class="admin-heading admin-heading--tertiary">Sisu</h3>
    <div class="column-container">
      <div class="admin__input-item">
        <h3 class="admin-heading admin-heading--quarternary">EST</h3>
        <div class="admin__editor">
          <div class="editor" id="conductorsSection<%= i + 1 %>EstEditor"><%- data.conductorsSections[i].content.est %></div>
        </div>
        <input class="admin__hidden-input" id="conductorsSection<%= i + 1 %>Est" name="conductorsSection<%= i + 1 %>Est" type="text">
      </div>
      <div class="admin__input-item">
        <h3 class="admin-heading admin-heading--quarternary">EN</h3>
        <div class="admin__editor">
          <div class="editor" id="conductorsSection<%= i + 1 %>EnEditor"><%- data.conductorsSections[i].content.en %></div>
        </div>
        <input class="admin__hidden-input" id="conductorsSection<%= i + 1 %>En" name="conductorsSection<%= i + 1 %>En" type="text">
      </div>
    </div>
    <div class="column-container">
      <a class="btn btn--admin btn--admin--large deleteBtn" data-action="/api/conductors/sections/<%= i + 1 %>">Kustuta</a>
      <button class="btn btn--admin btn--admin--large" type="submit">Salvesta</button>
    </div>
  </div>

</form>

<% } %>

<a class="btn btn--admin btn--admin--large addBtn" data-action="/api/conductors/sections">+ Lisa dirigent +</a>


<%- include('../partials/footer') -%>
