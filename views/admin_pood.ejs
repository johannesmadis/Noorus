<form action="/upload/pood" method="post" class="page-admin__form" id="pood">
  <div class="page-admin__form-box" id="poodSissejuhatusLoikForm">
    <% for (var i = 0; i < poodSissejuhatusData.loigud.length; i++) { %>
    <div class="page-admin__form-field poodSissejuhatusLoik" id="poodSissejuhatusLoik<%= i + 1 %>" data-heading="Sissejuhatav lõik">
      <h3 class="page-admin__heading poodSissejuhatusLoikHeading">Sissejuhatav lõik <%= i + 1 %></h3>
      <p class="page-admin__text">EST</p>
      <div type="text" contenteditable="true" class="page-admin__input page-admin__text-area input editable-input poodSissejuhatusLoikEstEd" id="poodSissejuhatusLoikEst<%= i + 1 %>Ed" name="poodSissejuhatusLoikEst<%= i + 1 %>Ed"><%- poodSissejuhatusData.loigud[i].est %></div>
      <input type="text" class="page-admin__hidden-input poodSissejuhatusLoikEst" id="poodSissejuhatusLoikEst<%= i + 1 %>" name="poodSissejuhatusLoikEst<%= i + 1 %>" value="<%- poodSissejuhatusData.loigud[i].est %>"></input>
      <p class="page-admin__text">EN</p>
      <div type="text" contenteditable="true" class="page-admin__input page-admin__text-area input editable-input poodSissejuhatusLoikEnEd" id="poodSissejuhatusLoikEn<%= i + 1 %>Ed" name="poodSissejuhatusLoikEn<%= i + 1 %>Ed"><%- poodSissejuhatusData.loigud[i].en %></div>
      <input type="text" class="page-admin__hidden-input poodSissejuhatusLoikEn" id="poodSissejuhatusLoikEn<%= i + 1 %>" name="poodSissejuhatusLoikEn<%= i + 1 %>" value="<%- poodSissejuhatusData.loigud[i].en %>"></input>
      <button class="page-admin__small-btn deleteBtn poodSissejuhatusLoikDeleteBtn" type="button" id="poodSissejuhatusLoikDeleteBtn<%= i + 1 %>" name="poodSissejuhatusLoikDeleteBtn<%= i + 1 %>">Kustuta</button>
    </div>
    <% } %>
  </div>
  <div class="page-admin__form-box">
    <button class="page-admin__small-btn" type="button" id="poodSissejuhatusLoikAddBtn">+ Lisa sissejuhatav lõik +</button>
  </div>
  <button class="page-admin__btn" type="submit" id="poodSissejuhatusBtn" name="button">Salvesta</button>
  <div class="page-admin__form-wrapper" id="poodForm">
    <% for (var a = 0; a < poodData.length; a++) { %>
    <div class="page-admin__subform poodSubform" name="pood<%= a + 1 %>Subform" id="pood<%= a + 1 %>Subform">
      <h2 class="page-admin__subtitle poodHeading" id="pood<%= a + 1 %>Heading" name="pood<%= a + 1 %>Heading">Toode <%= a + 1 %></h2>
      <div class="page-admin__form-box">
        <div class="page-admin__form-field">
          <h3 class="page-admin__heading">Pilt</h3>
          <input type="file" id="pood<%= a + 1 %>Pilt" name="pood<%= a + 1 %>Pilt" class="page-admin__hidden-input file poodPilt">
          <label for="pood<%= a + 1 %>Pilt" class="page-admin__small-btn poodPiltLabel" id="pood<%= a + 1 %>PiltLabel" name="pood<%= a + 1 %>PiltLabel">Vali fail</label>
          <p class="page-admin__input-placeholder poodPiltPlaceholder" id="pood<%= a + 1 %>PiltPlaceholder" name="pood<%= a + 1 %>PiltPlaceholder"><%= pildid[a].filename %></p>
          <img class="page-admin__icon poodPiltImg" src="<%= pildid[a].url %>" id="pood<%= a + 1 %>PiltImg" name="pood<%= a + 1 %>PiltImg" alt="Pilt <%= a + 1 %>">
        </div>
        <div class="page-admin__form-field">
          <h3 class="page-admin__heading">Nimetus ja hind</h3>
          <p class="page-admin__text">EST</p>
          <input type="text" class="page-admin__input page-admin__input--bold input poodToodeEst" id="pood<%= a + 1 %>ToodeEst" name="pood<%= a + 1 %>ToodeEst" value="<%= poodData[a].toode.est %>">
          <p class="page-admin__text">EN</p>
          <input type="text" class="page-admin__input page-admin__input--bold input poodToodeEn" id="pood<%= a + 1 %>ToodeEn" name="pood<%= a + 1 %>ToodeEn" value="<%= poodData[a].toode.en %>">
          <p class="page-admin__text">HIND (€)</p>
          <input type="number" class="page-admin__input page-admin__input--bold input poodToodeNumber" id="pood<%= a + 1 %>ToodeNumber" name="pood<%= a + 1 %>ToodeNumber" value="<%= poodData[a].toode.price %>">
        </div>
      </div>
      <div class="page-admin__form-box poodLoikForm" id="pood<%= a + 1 %>LoikForm" name="pood<%= a + 1 %>LoikForm">
        <% for (var i = 0; i < poodData[a].loigud.length; i++) { %>
        <div class="page-admin__form-field pood<%= a + 1 %>Loik" id="pood<%= a + 1 %>Loik<%= i + 1 %>" data-heading="Lõik">
          <h3 class="page-admin__heading pood<%= a + 1 %>LoikHeading">Lõik <%= i + 1 %></h3>
          <p class="page-admin__text">EST</p>
          <div type="text" contenteditable="true" class="page-admin__input page-admin__text-area input editable-input pood<%= a + 1 %>LoikEstEd" id="pood<%= a + 1 %>LoikEst<%= i + 1 %>Ed" name="pood<%= a + 1 %>LoikEst<%= i + 1 %>Ed">
            <%-  poodData[a].loigud[i].est %></div>
          <input type="text" class="page-admin__hidden-input pood<%= a + 1 %>LoikEst" id="pood<%= a + 1 %>LoikEst<%= i + 1 %>" name="pood<%= a + 1 %>LoikEst<%= i + 1 %>" value="<%-  poodData[a].loigud[i].est  %>"></input>
          <p class="page-admin__text">EN</p>
          <div type="text" contenteditable="true" class="page-admin__input page-admin__text-area input editable-input pood<%= a + 1 %>LoikEnEd" id="pood<%= a + 1 %>LoikEn<%= i + 1 %>Ed" name="pood<%= a + 1 %>LoikEn<%= i + 1 %>Ed">
            <%- poodData[a].loigud[i].en %></div>
          <input type="text" class="page-admin__hidden-input pood<%= a + 1 %>LoikEn" id="pood<%= a + 1 %>LoikEn<%= i + 1 %>" name="pood<%= a + 1 %>LoikEn<%= i + 1 %>" value="<%- poodData[a].loigud[i].en  %>"></input>
          <button class="page-admin__small-btn poodLoikDeleteBtn pood<%= a + 1 %>LoikDeleteBtn" type="button" id="pood<%= a + 1 %>LoikDeleteBtn<%= i + 1 %>" name="pood<%= a + 1 %>LoikDeleteBtn<%= i + 1 %>">Kustuta</button>
        </div>
        <% } %>
      </div>
      <div class="page-admin__form-box">
        <button class="page-admin__small-btn poodLoikAddBtn" type="button" id="pood<%= a + 1 %>LoikAddBtn">+ Lisa lõik +</button>
      </div>
      <div class="page-admin__form-box poodLoikNimistuForm" id="pood<%= a + 1 %>LoikNimistuForm" name="pood<%= a + 1 %>LoikNimistuForm">
        <% for (var i = 0; i < nimistuData[a].read.length; i++) { %>
        <div class="page-admin__form-field pood<%= a + 1 %>LoikNimistu" id="pood<%= a + 1 %>LoikNimistu<%= i + 1 %>" data-heading="Träkk">
          <h3 class="page-admin__heading pood<%= a + 1 %>LoikNimistuHeading">Träkk <%= i + 1 %></h3>
          <p class="page-admin__text">EST</p>
          <div type="text" contenteditable="true" class="page-admin__input page-admin__text-area input editable-input pood<%= a + 1 %>LoikNimistuEstEd" id="pood<%= a + 1 %>LoikNimistuEst<%= i + 1 %>Ed" name="pood<%= a + 1 %>LoikNimistuEst<%= i + 1 %>Ed">
            <%- nimistuData[a].read[i].est %></div>
          <input type="text" class="page-admin__hidden-input pood<%= a + 1 %>LoikNimistuEst" id="pood<%= a + 1 %>LoikNimistuEst<%= i + 1 %>" name="pood<%= a + 1 %>LoikNimistuEst<%= i + 1 %>" value="<%- nimistuData[a].read[i].est %>"></input>
          <p class="page-admin__text">EN</p>
          <div type="text" contenteditable="true" class="page-admin__input page-admin__text-area input editable-input pood<%= a + 1 %>LoikNimistuEnEd" id="pood<%= a + 1 %>LoikNimistuEn<%= i + 1 %>Ed" name="pood<%= a + 1 %>LoikNimistuEn<%= i + 1 %>Ed">
            <%- nimistuData[a].read[i].en %></div>
          <input type="text" class="page-admin__hidden-input pood<%= a + 1 %>LoikNimistuEn" id="pood<%= a + 1 %>LoikNimistuEn<%= i + 1 %>" name="pood<%= a + 1 %>LoikNimistuEn<%= i + 1 %>" value="<%- nimistuData[a].read[i].en %>"></input>
          <button class="page-admin__small-btn poodLoikNimistuDeleteBtn pood<%= a + 1 %>LoikNimistuDeleteBtn" type="button" id="pood<%= a + 1 %>LoikNimistuDeleteBtn<%= i + 1 %>" name="pood<%= a + 1 %>LoikNimistuDeleteBtn<%= i + 1 %>">Kustuta</button>
        </div>
        <% } %>
      </div>
      <div class="page-admin__form-box">
        <button class="page-admin__small-btn poodLoikNimistuAddBtn" type="button" id="pood<%= a + 1 %>LoikNimistuAddBtn">+ Lisa träkk +</button>
        <button class="page-admin__small-btn poodDeleteBtn" type="button" id="pood<%= a + 1 %>DeleteBtn">Kustuta toode</button>
      </div>
      <div class="page-admin__form-box">
      </div>
      <button class="page-admin__btn" type="submit">Salvesta</button>
    </div>
    <% } %>
  </div>
  <div class="page-admin__form-box">
    <button class="page-admin__btn" id="poodAddBtn">+ Lisa toode +</button>
  </div>
</form>
