<%- include partials/head {data: data} -%>
<%- include partials/navigation {data: data} -%>
<nav class="sidenav">
  <ul class="sidenav__list">
    <li class="sidenav__item sidenav__special-item"><a href="#" class="sidenav__link"><%= data.dropdownMenu[0] %></a></li>
    <li class="sidenav__item"><a href="/<%= data.pageInfo.navigation.hrefs.dropdown[0] %>" class="sidenav__link"><%= data.aboutSectionHeadings[1] %></a></li>
    <li class="sidenav__item"><a href="/<%= data.pageInfo.navigation.hrefs.dropdown[1] %>" class="sidenav__link"><%= data.aboutSectionHeadings[2] %></a></li>
    <li class="sidenav__item"><a href="/<%= data.pageInfo.navigation.hrefs.dropdown[2] %>" class="sidenav__link"><%= data.aboutSectionHeadings[3] %></a></li>
    <li class="sidenav__item"><a href="/<%= data.pageInfo.navigation.hrefs.dropdown[3] %>" class="sidenav__link"><%= data.aboutSectionHeadings[4] %></a></li>
    <li class="sidenav__item"><a href="/<%= data.pageInfo.navigation.hrefs.dropdown[4] %>" class="sidenav__link"><%= data.aboutSectionHeadings[5] %></a></li>
  </ul>
</nav>
<main class="about-container">
  <section class="about-intro">
    <% if (data.staticImages.aboutBackgroundImage) { %>
    <div class="about-intro__img" alt="Segakoor Noorus!!*" style="background-image: url(<%= data.staticImages.aboutBackgroundImage.url %>)"></div>
    <% } %>
    <div class="about-intro__text-box">
      <h2 class="heading--secondary heading--purple u-margin-bottom-big"><%= data.pageInfo.PageTitle %></h2>
      <% if (data.aboutSectionHeadings[0]) { %>
      <h3 class="heading--tertiary heading--purple u-margin-bottom-big"><%= data.aboutSectionHeadings[0] %></h3>
      <% } %>
      <% if (data.staticText[0]) { %>
      <div class="about-intro__content">
        <template>
          <%- data.staticText[0] %>
        </template>
      </div>
      <% } %>
    </div>
  </section>
  <section class="about-members" id="<%= data.pageInfo.miscellaneous[0] %>">
    <h2 class="heading--secondary heading--purple u-margin-bottom-big"><%= data.aboutSectionHeadings[1] %></h2>
    <div class="about-members__subsection">
      <% if (data.staticText[1]) { %>
      <div class="about-members__content">
        <template>
          <%- data.staticText[1] %>
        </template>
      </div>
      <% } %>
    </div>
    <div class="about-members__subsection">
      <div class="about-members__grid">
        <% for (i = 3; i < 7; i++) { %>
        <div class="about-members__grid-item">
          <% if (data.staticTextWithHeading[i].heading) { %>
          <h3 class="heading--tertiary heading--purple u-margin-bottom-big"><%= data.staticTextWithHeading[i].heading %></h3>
          <% } %>
          <% if (data.staticTextWithHeading[i].content) { %>
          <p class="paragraph--small paragraph--purple u-margin-bottom-big"><%- data.staticTextWithHeading[i].content %></p>
        </div>
        <% } %>
      </div>
    </div>
    <div class="about-members__subsection">
      <% for (i = 0; i < data.membersSegments.length; i++) { %>
      <div class="about-members__segment">
        <% if (data.membersSegments[i].heading) { %>
        <h3 class="heading--tertiary heading--purple u-margin-bottom-big"><%= data.membersSegments[i].heading %></h3>
        <% } %>
        <% if (data.membersSegments[i].content) { %>
        <div class="about-members__content">
          <template>
            <%- data.membersSegments[i].content %>
          </template>
        </div>
        <% } %>
        <% } %>
      </div>
  </section>
  <section class="about-conductors" id="<%= data.pageInfo.miscellaneous[1] %>">
    <h2 class="heading--secondary heading--purple"><%= data.aboutSectionHeadings[2] %></h2>
    <% for (var i = 0; i < data.conductorsSegments.length; i++) { %>
    <div class="about-conductors__segment">
      <div class="about-conductors__text-box">
        <% if (data.conductorsSegments[i].heading) { %>
        <h3 class="heading--tertiary heading--purple u-margin-bottom-big"><%= data.conductorsSegments[i].heading %></h3>
        <% } %>
        <% if (data.conductorsSegments[i].content) { %>
        <div class="about-conductors__content">
          <template>
            <%- data.conductorsSegments[i].content %>
          </template>
        </div>
        <% } %>
      </div>
      <div class="about-conductors__img" style="background-image: url('..<%= data.conductorsImages[i].url %>')"></div>
    </div>
    <% } %>
  </section>


  <section class="about-history" id="<%= data.pageInfo.miscellaneous[2] %>">
    <h2 class="heading--secondary heading--purple"><%= data.aboutSectionHeadings[3] %></h2>
    <% for (var i = 0; i < data.historySegments.length; i++) { %>
    <div class="about-history__segment">
      <% if (data.historySegments[i].heading) { %>
      <h3 class="heading--tertiary heading--purple u-margin-bottom-big"><%= data.historySegments[i].heading %></h3>
      <% } %>
      <% if (data.historySegments[i].content) { %>
      <div class="about-history__content">
        <template>
          <%- data.historySegments[i].content %>
        </template>
      </div>
      <% } %>
    </div>
    <% } %>
  </section>

  <section class="about-media" id="<%= data.pageInfo.miscellaneous[3] %>">
    <h2 class="heading--secondary heading--purple"><%= data.aboutSectionHeadings[4] %></h2>
      <% for (var i = 0; i < data.iframes.length; i++) { %>
      <div class="about-media__iframe">
        <iframe class="iframe" src="<%= data.iframes[i].link %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      </div>
      <% } %>
      <% for (var i = 0; i < data.mediaSegments.length; i++) { %>
      <div class="about-media__segment">
        <% if (data.historySegments[i].heading) { %>
        <h3 class="heading--tertiary heading--purple u-margin-bottom-big"><%= data.mediaSegments[i].heading %></h3>
        <% } %>
        <% if (data.mediaSegments[i].content) { %>
        <div class="about-media__content">
          <template>
            <%- data.mediaSegments[i].content %>
          </template>
        </div>
        <% } %>
      </div>
      <% } %>
  </section>
<% if (data.sponsorsLogos) { %>
  <section class="about-sponsors" id="<%= data.pageInfo.miscellaneous[4] %>">
    <h2 class="heading--secondary heading--purple"><%= data.aboutSectionHeadings[5] %></h2>
    <div class="about-sponsors__container">
      <% for (var i = 0; i < data.sponsorsLogos.length; i++) { %>
      <div class="about-sponsors__logo-box">
        <a href="<%= data.sponsorsLogos[i].link %>">
          <img src="<%= data.sponsorsLogos[i].url %>" alt="Logo <%= i + 1 %>" class="about-sponsors__logo">
        </a>
      </div>
      <% } %>
    </div>
  </section>
  <% } %>
</main>
<%- include partials/footnav {data: data} -%>
<%- include partials/footer -%>
