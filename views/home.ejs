<%- include partials/head-en {pageTitle: pageTitle} -%>
<%- include partials/navigation-en {currentPage: currentPage} -%>
<div class="logo">
  <img class="logo__img" src="img/logo-lilla.png" alt="logo">
</div>
<div class="popup show" id="popup">
  <div class="popup__form">
  <form class="form" action="https://docs.google.com/forms/u/0/d/e/1FAIpQLSeuzEaVgkRN1W4aoT9HQeEZ4JGaQ4Q76QOq6_eOQZ_JqHwfKw/formResponse" method="post" id="popup-form">
      <h3 class ="heading--tertiary heading--white">Former singer of Noorus?</h3>
      <h3 class ="heading--tertiary heading--white u-margin-bottom-small">Sign up for the mailing list!</h3>
      <input class="form__input" type="text" name="entry.492397759" placeholder="First name" required value="">
      <input class="form__input" type="text" name="entry.629908172" placeholder="Family name" required value="">
      <input class="form__input" type="email" name="entry.239882331" placeholder="E-mail" required value="">
      <textarea class="form__input form__text-area" id="text-area" name="entry.1134328921" rows="1" placeholder="When did you sing for us?" aria-label="When did you sing for us?"></textarea>
      <button class="btn btn--main u-margin-top-small" type="submit" name="submit">Send</button>
  </form>
  </div>
</div>
<header class="header">
  <div class="header__heading-box">
    <h1 class="heading--purple heading--primary"><%= avalehtData.suurPealkiri.en %></h1>
    <p class="paragraph--large paragraph--purple header__paragraph"><%= avalehtData.jatkuPealkiri.en %></p>
    <a href="/en/about-us" class="btn btn--main">Read more</a>
  </div>
</header>
<main class="homepage__container">
  <section class="section-features">
    <div class="section-features__container">
      <div class="section-features__column">
        <div class="section-features__item">
          <a class="section-features__link" href="/en/about-us#section-members">
            <i class="fas fa-music section-features__icon"></i>
            <h3 class="heading--purple heading--tertiary">Members</h3>
          </a>
        </div>
      </div>
      <div class="section-features__column">
        <div class="section-features__item">
          <a class="section-features__link" href="/en/join-us">
            <i class="fas fa-user section-features__icon"></i>
            <h3 class="heading--purple heading--tertiary">Join us</h3>
          </a>
        </div>
      </div>
      <div class="section-features__column">
        <div class="section-features__item">
          <a class="section-features__link" href="/en/contact">
            <i class="fas fa-envelope section-features__icon"></i>
            <h3 class="heading--purple heading--tertiary">Contact</h3>
          </a>
        </div>
      </div>
    </div>
  </section>
  <section class="section-events">
    <div class="section-events__heading-box">
      <h2 class="heading--purple heading--secondary u-margin-bottom-big"><%= avalehtData.sektsiooniPealkiri1.en %></h2>
      <p class="paragraph--large paragraph--purple u-margin-bottom-big"><%= avalehtData.sektsiooniTekst1.en %></p>
    </div>
    <div class="section-events__container">
      <div class="error-message">
        <h3 class="heading--purple heading--tertiary u-margin-bottom-big">Oh darn!</h3>
        <p class="paragraph--large paragraph--purple">Unfortunately there are no events to show at the moment.</p>
      </div>
      <div class="card card--1">
        <div class="card__upper card__upper--1">
        </div>
        <div class="card__lower">
          <h3 class="heading--white heading--tertiary">Noorus 60</h3>
          <a href="/en/events#1" class="btn btn--main">Read more</a>
        </div>
      </div>
    </div>
  </section>
  <section class="section-history" id="section-history">
    <div class="section-history__container">
      <h2 class="heading--purple heading--secondary u-margin-bottom-big"><%= avalehtData.sektsiooniPealkiri2.en %></h2>
      <p class="paragraph--large paragraph--purple header__paragraph u-margin-bottom-big"><%= avalehtData.sektsiooniTekst2.en %></p>
      <a href="/en/events#past-events" class="btn btn--main">Read more</a>
    </div>
  </section>
</main>
