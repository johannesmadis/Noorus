<%- include('../partials/head', {data: data}); -%>
<%- include('../partials/headnav', {data: data}); -%>
<%- include('../partials/hamburgernav', {data: data}); -%>


<main class="contact">


  <section class="section">

    <div class="container">
      <h2 class="heading heading--secondary u-margin"><%= data.pageInfo.pageTitle %></h2>
      <div class="content">
        <%- data.intros[7][data.language] %>
      </div>
    </div>

    <% for (let i = 0; i < data.contactSections.length; i++) { %>
    <div class="container">
      <h3 class="heading heading--tertiary u-margin"><%= data.contactSections[i].heading[data.language] %></h3>
      <div class="content">
        <%- data.contactSections[i].content[data.language] %>
      </div>
    </div>
    <% } %>

  </section>


  <section class="section">

    <form class="form" action="/api/forms/contact">
      <h3 class="heading heading--tertiary"><%= data.miscellaneous[0][data.language] %></h3>

      <div class="form__input-group">

        <% for (let i = 0; i < data.contactForm.length; i++) { %>
        <div class="form__field">
          <span><% if (data.contactForm[i].required === "on") { %> * <% } else { %> &nbsp <% }%> </span>
          <% if (data.contactForm[i].expandable === "on") { %>
          <textarea class="form__input form__text-area" name="<%= data.contactForm[i][data.language] %>" rows="1" placeholder="<%= data.contactForm[i][data.language] %>" <% if (data.contactForm[i].required === "on") { %> required <% } %>
            aria-label="<%= data.contactForm[i].content %>"></textarea>
          <% } else { %><input class="form__input" name="<%= data.contactForm[i][data.language] %>" type="text" placeholder="<%= data.contactForm[i][data.language] %>" <% if (data.contactForm[i].required === "on") { %> required <% } %>
            aria-label="<%= data.contactForm[i][data.language] %>">
          <% } %>
        </div>
        <% } %>

        </div>

      <button class="btn btn--main" data-action="POST" type="submit"><%= data.pageInfo.miscellaneous[0] %></button>
    </form>

  </section>


</main>


<%- include('../partials/footnav', {data: data}); -%>
<%- include('../partials/footer'); -%>
