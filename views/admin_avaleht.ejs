  <form action="/upload" method="post" enctype="multipart/form-data" class="page-admin__form">
    <input type="hidden" name="formInstance" value="avalehtPildid">
    <h3 class="page-admin__title">Pildid</h3>
    <div class="page-admin__form-box">
      <div class="page-admin__form-field">
        <h3 class="page-admin__heading">Päiseikoon</h3>
        <input type="file" name="avalehtPaiseikoon" id="avalehtPaiseikoon" class="page-admin__hidden-input">
        <label for="avalehtPaiseikoon" class="page-admin__small-btn">Vali fail</label>
        <p class="page-admin__input-placeholder"></p>
        <img class="page-admin__icon" src="/img/favicon.png" alt="">
      </div>
      <div class="page-admin__form-field">
        <h3 class="page-admin__heading">Logo</h3>
        <input type="file" name="avalehtLogo" id="avalehtLogo" class="page-admin__hidden-input">
        <label for="avalehtLogo" class="page-admin__small-btn">Vali fail</label>
        <p class="page-admin__input-placeholder"></p>
        <img class="page-admin__icon" src="/img/logo-lilla.png" alt="">
      </div>
      <div class="page-admin__form-field">
        <h3 class="page-admin__heading">Taustapilt</h3>
        <input type="file" name="avalehtTaustapilt" id="avalehtTaustapilt" class="page-admin__hidden-input">
        <label for="avalehtTaustapilt" class="page-admin__small-btn">Vali fail</label>
        <p class="page-admin__input-placeholder"></p>
        <img class="page-admin__icon" src="/img/noorus1.jpg" alt="">
      </div>
    </div>
    <button class="page-admin__btn" type="submit" name="button">Salvesta</button>
  </form>
