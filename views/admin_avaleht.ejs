        <input type="text" class="page-admin__input" name="sektsiooniPealkiri2En" value="<%= avalehtTekstidData.sektsiooniPealkiri2.en %>">
      </div>
      <div class="page-admin__form-field">
        <h3 class="page-admin__heading">Sektsiooni tekst 2</h3>
        <p class="page-admin__text">EST</p>
        <textarea class="page-admin__input page-admin__text-area" name="sektsiooniTekst2Est" rows="1"><%= avalehtTekstidData.sektsiooniTekst2.est %></textarea>
        <p class="page-admin__text">EN</p>
        <textarea class="page-admin__input page-admin__text-area" name="sektsiooniTekst2En" rows="1"><%= avalehtTekstidData.sektsiooniTekst2.en %></textarea>
      </div>
    </div>
